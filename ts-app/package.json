{
    "name": "@combomash/orchestrator",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "build": "tsc --build",
        "build.watch": "tsc --build --watch",
        "build.workflow": "ts-node src/scripts/build-workflow-bundle.ts",
        "dev": "ts-node src/worker.ts",
        "dev.watch": "nodemon src/worker.ts",
        "start": "NODE_ENV=production ts-node src/worker.ts",
        "start.watch": "NODE_ENV=production nodemon src/worker.ts",
        "temporal": "temporal server start-dev --ui-port 8080"
    },
    "nodemonConfig": {
        "execMap": {
            "ts": "ts-node"
        },
        "ext": "ts",
        "watch": [
            "src"
        ]
    },
    "dependencies": {
        "@temporalio/activity": "^1.8.6",
        "@temporalio/client": "^1.8.6",
        "@temporalio/worker": "^1.8.6",
        "@temporalio/workflow": "^1.8.6",
        "@types/seedrandom": "^3.0.8",
        "dotenv": "^16.4.5",
        "minimist": "^1.2.8",
        "ms": "^2.1.3",
        "nanoid": "^5.0.4",
        "puppeteer": "^21.6.1",
        "seedrandom": "^3.0.5",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@temporalio/testing": "^1.8.6",
        "@tsconfig/node18": "^18.2.2",
        "@types/minimist": "^1.2.5",
        "@types/mocha": "10.x",
        "@types/ms": "^0.7.34",
        "@types/node": "^20.10.5",
        "@types/uuid": "^9.0.7",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-deprecation": "^2.0.0",
        "mocha": "10.x",
        "nodemon": "^3.0.2",
        "prettier": "^3.1.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    }
}
